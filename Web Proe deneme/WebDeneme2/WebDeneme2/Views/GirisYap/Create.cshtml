@model MusteriRegister
@{
    ViewData["Title"] = "Kayıt Ol";
}
<div class="register-container">
    <h2>Kayıt Ol</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Ad"></label>
            <input asp-for="Ad" class="form-control" placeholder="Adınızı girin" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Soyad"></label>
            <input asp-for="Soyad" class="form-control" placeholder="Soyadınızı girin" />
            <span asp-validation-for="Soyad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Email adresinizi girin" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sifre"></label>
            <input asp-for="Sifre" class="form-control" placeholder="Şifrenizi girin" />
            <span asp-validation-for="Sifre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SifreTekrar"></label>
            <input asp-for="SifreTekrar" class="form-control" placeholder="Şifreyi tekrar girin" />
            <span asp-validation-for="SifreTekrar" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TelNo"></label>
            <input asp-for="TelNo" class="form-control" placeholder="Telefon numaranızı girin" />
            <span asp-validation-for="TelNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cinsiyet"></label>
            <select asp-for="Cinsiyet" class="form-control">
                <option value="">Seçiniz...</option>
                <option value="Erkek">Erkek</option>
                <option value="Kadın">Kadın</option>
            </select>
            <span asp-validation-for="Cinsiyet" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>
</div>
