<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDeneme2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hakkimzda.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/WebDeneme2.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col-md-8">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hizmet" asp-action="Hizmet">Hizmetlerimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hakkimizda" asp-action="Hakkimizda">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Iletisim">İletişim</a>
                        </li>
                    </ul>
                    <div class="navbar-buttons col-md-4">
                        <a class="btn">Randevu Al</a>
                        <a class="btn">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </main>
    

    <footer class="border-top footer text-muted bg-dark text-white py-3 mt-4">
        <div class="container d-flex flex-column flex-md-row justify-content-between">
            <div>
                &copy; 2024 - WebDeneme2 |
                <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a> |
                <a class="text-white" asp-area="" asp-controller="Home" asp-action="Terms">Kullanım Şartları</a>
            </div>
            <div>
                <span>Bize Ulaşın:</span>
                <a href="mailto:info@webdeneme2.com" class="text-white">info@webdeneme2.com</a> |
                <a href="tel:+905555555555" class="text-white">+90 555 555 5555</a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.querySelector('.navbar-toggler').addEventListener('click', function () {
            document.querySelector('.navbar-nav').classList.toggle('show');
        });
    </script>

    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


