@model AdminViewModel
@{
    Layout = "/Views/Shared/_Layout4.cshtml";
}
<div class="tumRandevular">
    <h2>Tüm Randevular</h2>

    @if (Model.Randevular != null && Model.Randevular.Any())
    {
        <table border="1">
            <thead>
                <tr>
                    <th>Hizmet</th>
                    <th>Müşteri</th>
                    <th>Çalışan</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model.Randevular)
                {
                    <tr>
                        <td data-label="Hizmet">@randevu.Hizmet?.Ad</td>
                        <td data-label="Müşteri">@randevu.Musteri?.Ad @randevu.Musteri?.Soyad</td>
                        <td data-label="Çalışan">@randevu.Calisan.Ad @randevu.Calisan.Soyad</td>
                        <td data-label="Tarih">@randevu.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                        <td data-label="Durum">@randevu.RandevuDurum</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>Hiç randevu bulunmamaktadır.</p>
    }

</div>
