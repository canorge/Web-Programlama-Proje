@{
    ViewData["Title"] = "Anasayfa";
}
<div class="anasayfa">
    <!-- Slider -->
    <div id="carouselExample" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/anasayfaresim.jpg" class="d-block w-100" alt="Berber Salonu" style="height: 600px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-3 fw-bold text-white">Şıklığın Adresi</h1>
                    <p class="lead text-white">Tarzınızı yansıtmanın tam zamanı.</p>
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-primary btn-lg">Randevu Al</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/anasayfaresim2.jpg" class="d-block w-100" alt="Berber Salonu" style="height: 600px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-3 fw-bold text-white">Saçınızı Yeniden Keşfedin</h1>
                    <p class="lead text-white">Mükemmel görünüm için doğru adres.</p>
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-primary btn-lg">Randevu Al</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Salon Hakkında -->
    <section id="hakkimizda" class="my-5">
        <div class="container text-center">
            <h2 class="display-4 fw-bold" style="color:#333;">Hakkımızda</h2>
            <p class="lead mt-3" style="color:#555;">
                Berber salonumuz, yılların deneyimi ve müşteri memnuniyetini bir araya getiriyor.
                Modern ve klasik tarzlarla size özel hizmet sunuyoruz.
            </p>
            <a asp-controller="Hakkimizda" asp-action="Hakkimizda" class="btn btn-outline-primary btn-lg">Devamını Oku</a>
        </div>
    </section>

    <!-- Hizmetlerimiz -->
    <section id="hizmetlerimiz" class="my-5 bg-light">
        <div class="container text-center">
            <h2 class="display-4 fw-bold" style="color:#333;">Hizmetlerimiz</h2>
            <p class="lead mt-3" style="color:#555;">
                Saç kesimi, sakal tıraşı ve kişisel bakım hizmetlerimizle tarzınıza uygun çözümler sunuyoruz.
            </p>
            <a asp-controller="Hizmet" asp-action="Hizmet" class="btn btn-outline-primary btn-lg">Tüm Hizmetleri Gör</a>
        </div>
    </section>

</div>
