<div class="AIoneri">
    <form asp-action="AI" method="post" enctype="multipart/form-data">
        <label for="photo">Fotoğraf Yükle:</label>
        <input type="file" name="photo" id="photo" required />
        <br />

        <label for="hair_style">Saç Stili Seç:</label>
        <select name="hair_style" id="hair_style" required>
            <option value="BuzzCut">Buzz Cut</option>
            <option value="Pompadour">Pompadour</option>
            <option value="SlickBack">Slick Back</option>
            <!-- Diğer saç stillerini buraya ekleyebilirsiniz -->
        </select>
        <br />

        <label for="color">Saç Rengi Seç:</label>
        <select name="color" id="color">
            <option value="">Renk Seçin</option>
            <option value="blonde">Blonde</option>
            <option value="brown">Brown</option>
            <option value="black">Black</option>
            <!-- Diğer renkleri buraya ekleyebilirsiniz -->
        </select>
        <br />

        <button type="submit">Fotoğraf Yükle</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p style="color: red;">@ViewBag.Error</p>
    }

    @if (ViewBag.AIResult != null)
    {
        <h3>İşlenmiş Görsel:</h3>
        <img src="@ViewBag.AIResult" alt="İşlenmiş Görsel" style="max-width: 500px;" />
    }
</div>